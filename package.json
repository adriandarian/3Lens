{
  "name": "3lens",
  "version": "0.0.0",
  "private": true,
  "description": "The definitive developer toolkit for three.js",
  "keywords": [
    "three.js",
    "threejs",
    "webgl",
    "webgpu",
    "devtools",
    "debugging",
    "inspector"
  ],
  "homepage": "https://github.com/adriandarian/3Lens",
  "repository": {
    "type": "git",
    "url": "https://github.com/adriandarian/3Lens.git"
  },
  "license": "MIT",
  "author": "Adrian Darian <adrian.the.hactus@gmail.com> (https://github.com/adriandarian)",
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "build:packages": "pnpm --filter './packages/**' build",
    "build:examples": "node scripts/build-examples.mjs",
    "dev": "node scripts/dev.mjs",
    "dev:quick": "pnpm --filter './packages/**' --filter '@3lens/example-vanilla-threejs' --parallel dev",
    "dev:packages": "pnpm --filter './packages/**' --parallel dev",
    "dev:examples": "node scripts/serve-examples.mjs",
    "example": "node scripts/run-example.mjs",
    "example:list": "node scripts/run-example.mjs --list",
    "lint": "oxlint packages/*/src -A no-unused-vars -A no-unassigned-vars -A unicorn/no-new-array -A unicorn/no-useless-spread -A unicorn/no-useless-fallback-in-spread",
    "lint:fix": "oxlint packages/*/src --fix -A no-unused-vars -A no-unassigned-vars -A unicorn/no-new-array -A unicorn/no-useless-spread -A unicorn/no-useless-fallback-in-spread",
    "format": "oxfmt packages/*/src/**/*.{ts,tsx}",
    "format:check": "oxfmt --check packages/*/src/**/*.{ts,tsx}",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "benchmark": "vitest run --project=benchmarks --reporter=verbose",
    "benchmark:ci": "vitest run --project=benchmarks --reporter=json --outputFile=benchmark-results.json",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "typecheck": "pnpm -r typecheck",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch",
    "docs:serve": "npx serve docs/api",
    "docs:dev": "vitepress dev docs",
    "docs:build": "pnpm build:examples && vitepress build docs",
    "docs:build:only": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "docs:version": "npx tsx scripts/docs-version.ts",
    "changelog": "npx tsx scripts/generate-changelog.ts",
    "changelog:release": "npx tsx scripts/generate-changelog.ts --release",
    "changelog:preview": "npx tsx scripts/generate-changelog.ts --preview",
    "version:bump": "npx tsx scripts/bump-version.ts",
    "release:prepare": "pnpm build && pnpm test && pnpm changelog"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "@types/three": "catalog:",
    "@vercel/analytics": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "oxfmt": "catalog:",
    "oxlint": "catalog:",
    "three": "catalog:",
    "tsx": "catalog:",
    "typedoc": "catalog:",
    "typedoc-plugin-markdown": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vitepress": "catalog:",
    "vitest": "catalog:"
  },
  "pnpm": {
    "overrides": {
      "http-proxy-middleware": ">=2.0.9"
    },
    "onlyBuiltDependencies": [
      "electron",
      "esbuild",
      "nice-napi",
      "unrs-resolver",
      "vue-demi"
    ]
  },
  "packageManager": "pnpm@10.27.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
