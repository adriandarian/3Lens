{
  "name": "3lens",
  "version": "0.0.0",
  "private": true,
  "description": "The definitive developer toolkit for three.js",
  "keywords": [
    "three.js",
    "threejs",
    "webgl",
    "webgpu",
    "devtools",
    "debugging",
    "inspector"
  ],
  "homepage": "https://github.com/adriandarian/3Lens",
  "repository": {
    "type": "git",
    "url": "https://github.com/adriandarian/3Lens.git"
  },
  "license": "MIT",
  "author": "Adrian Darian <adrian.the.hactus@gmail.com> (https://github.com/adriandarian)",
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "build:packages": "pnpm --filter './packages/**' build",
    "dev": "pnpm --filter './packages/**' --filter '@3lens/example-vanilla-threejs' --parallel dev",
    "dev:packages": "pnpm --filter './packages/**' --parallel dev",
    "example": "node scripts/run-example.mjs",
    "example:list": "node scripts/run-example.mjs --list",
    "lint": "eslint packages/*/src --ext .ts,.tsx",
    "lint:fix": "eslint packages/*/src --ext .ts,.tsx --fix",
    "format": "prettier --write \"packages/*/src/**/*.{ts,tsx,css}\"",
    "format:check": "prettier --check \"packages/*/src/**/*.{ts,tsx,css}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "benchmark": "vitest run --project=benchmarks --reporter=verbose",
    "benchmark:ci": "vitest run --project=benchmarks --reporter=json --outputFile=benchmark-results.json",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "typecheck": "pnpm -r typecheck",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch",
    "docs:serve": "npx serve docs/api",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "docs:version": "npx ts-node scripts/docs-version.ts",
    "changelog": "npx ts-node scripts/generate-changelog.ts",
    "changelog:release": "npx ts-node scripts/generate-changelog.ts --release",
    "changelog:preview": "npx ts-node scripts/generate-changelog.ts --preview",
    "version:bump": "npx ts-node scripts/bump-version.ts",
    "release:prepare": "pnpm build && pnpm test && pnpm changelog"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/three": "^0.160.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vercel/analytics": "^1.6.1",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "prettier": "^3.1.0",
    "three": "^0.160.0",
    "typedoc": "^0.25.0",
    "typedoc-plugin-markdown": "3.17.1",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitepress": "^1.6.4",
    "vitest": "^1.0.0"
  },
  "packageManager": "pnpm@8.12.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
