{
  "$schema": "https://typedoc.org/schema.json",
  "entryPoints": [
    "./packages/core/src/index.ts"
  ],
  "entryPointStrategy": "expand",
  "out": "./docs/api",
  "name": "3Lens API Reference",
  "readme": "./docs/guides/GETTING-STARTED.md",
  "includeVersion": true,
  "excludePrivate": true,
  "excludeProtected": false,
  "excludeInternal": true,
  "excludeExternals": true,
  "hideGenerator": false,
  "searchInComments": true,
  "categorizeByGroup": true,
  "defaultCategory": "Other",
  "categoryOrder": [
    "Core",
    "Probe",
    "Types",
    "React",
    "Angular", 
    "Vue",
    "Plugins",
    "Other"
  ],
  "sort": ["source-order", "alphabetical"],
  "visibilityFilters": {
    "protected": true,
    "@internal": false
  },
  "navigation": {
    "includeCategories": true,
    "includeGroups": true
  },
  "gitRevision": "main",
  "sourceLinkTemplate": "https://github.com/adriandarian/3Lens/blob/{gitRevision}/{path}#L{line}",
  "customCss": "./docs/api-styles.css",
  "skipErrorChecking": true
}
