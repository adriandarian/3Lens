{
  "name": "@3lens/runtime",
  "version": "1.0.0",
  "description": "3Lens runtime - public API for creating and managing Lens instances",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@3lens/kernel": "workspace:*"
  },
  "devDependencies": {
    "typescript": "catalog:",
    "vite": "catalog:",
    "vitest": "catalog:"
  },
  "peerDependencies": {
    "three": ">=0.150.0"
  },
  "keywords": [
    "3lens",
    "threejs",
    "devtools",
    "runtime"
  ],
  "license": "MIT"
}
